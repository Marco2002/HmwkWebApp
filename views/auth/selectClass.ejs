<% var selectedSchool; %>
<% include ../partials/headerBasic %>

<div class="app-color full-height">
    <div class="container">
        <div class="row no-m">
            <div class="col s12 l8 push-l2">
                <div class="margin"></div>
                <% include ../partials/flash %>
                <div class="card">
                    <div class="card-content">
                        <h4 class="center"><%= texts.SELECT_CLASS %></h4>
                        <form action="/selectClass" method="POST">
                            <div class="row">
                                <div class="valign-wrapper">
                                    <div class="input-field col s10">
                                        <select name="clas" id="class">
                                            <option value="" disabled selected><%= texts.SELECT_CLASS %></option>
                                            <% results.forEach(clas => { %>
                                                <option value="<%=clas.id%>"><%=clas.name%></option>
                                            <% }) %>
                                        </select>
                                        <label><%= texts.CLASS %></label>
                                    </div>
                                    <a href="/schools/<%=user.school_id%>/classes/new" target="_blank" class="waves-effect waves-light btn col s2 app-color"><i class="material-icons">add</i></a>
                                </div>
                            </div>

                            <div class="row no-m center">
                                <button class="app-color waves-effect waves-light btn"><%= texts.NEXT %><i class="material-icons right">navigate_next</i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footerBasic %>
