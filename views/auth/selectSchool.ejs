<!DOCTYPE html>
<html>
    <header>
        <title>Homework Web App</title>

        <!-- Materialize -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
        <!-- main.css -->
        <link rel="stylesheet" href="/stylesheets/main.css" type="text/css" />

        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </header>
    <body class="b-img">
<% var selectedSchool; %>


        <div class="container">
            <div class="row no-m">
                <div class="col s12 l8 push-l2">
                    <div class="margin"></div>
                    <% include ../partials/flash %>
                    <div class="card">
                        <div class="card-content">
                            <h4 class="center"><%= texts.SELECT_SCHOOL %></h4>
                            <form action="/selectSchool" method="POST">

                                <div class="input-field">
                                    <select name="school" id="school">
                                        <option value="" disabled selected><%= texts.SELECT_SCHOOL %></option>
                                        <% results.forEach(school => { %>
                                            <option value="<%=school.name%>"><%=school.name%></option>
                                        <% }) %>
                                    </select>
                                    <label><%= texts.SCHOOL %></label>
                                </div>
                                <div class="input-field">
                                    <input id="schoolPassword" name="schoolPassword" type="password" class="validate">
                                    <label for="schoolPassword"><%= texts.SCHOOL_PASSWORD %></label>
                                </div>

                                <div class="row no-m center">
                                    <button class="blue waves-effect waves-light btn"><%= texts.NEXT %><i class="material-icons right">navigate_next</i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <!-- Materialize -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <!-- script.js -->
        <script src="/scripts/script.js"></script>
        </body>
</html>
