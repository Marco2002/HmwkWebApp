<% var selectedSchool; %>
<% include ../partials/headerBasic %>

<div class="app-color full-height">
    <div class="container">
        <div class="row no-m">
            <div class="col s12 l8 push-l2">
                <div class="margin"></div>
                <% include ../partials/flash %>
                <div class="card">
                    <div class="card-content">
                        <h4 class="center"><%= texts.SELECT_SCHOOL %></h4>
                        <form action="/selectSchool" method="POST">
                            
                            <div class="input-field">
                            <select name="school" id="school">
                                <option value="" disabled selected><%= texts.SELECT_SCHOOL %></option>
                                <% results.forEach(school => { %>
                                    <option value="<%=school.name%>"><%=school.name%></option>
                                <% }) %>
                            </select>
                            <label><%= texts.SCHOOL %></label>
                            </div>
                            
                            <div class="row no-m center">
                                <button class="app-color waves-effect waves-light btn"><%= texts.NEXT %><i class="material-icons right">navigate_next</i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footerBasic %>
