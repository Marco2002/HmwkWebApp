<% include ../partials/headerBasic %>
<div class="app-color full-height">
    <div class="container">
        <div class="row no-m">
            <div class="col s12 l8 push-l2">
                <div class="margin"></div>
                <% include ../partials/flash %>
                <div class="card">
                    <div class="card-content">
                        <h4 class="center"><%= texts.ADD_CLASS %></h4>
                        <form action="/schools/<%=school_id%>/classes" method="POST">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="name" name="class[name]" type="text" class="validate">
                                    <label for="name"><%= texts.NAME %></label>
                                </div>
                            </div>
                            <div class="row">
                                <button class="app-color col s6 push-s3 m4 push-m4 l2 push-l5 waves-effect waves-light btn"><%= texts.SUBMIT %></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footerBasic %>