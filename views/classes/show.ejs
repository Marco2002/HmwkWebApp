<% include ../partials/header %>

<div class="container row no-m">
    <% include ../partials/flash %>
</div>

<div class="container row no-m valign-wrapper">
    <h4 class="col s6 l4"><%= clas.name %></h4>
    <div class="col s6 l8">
        <a href="#change-name" class="btn blue waves-light right modal-trigger"><%= texts.CHANGE_NAME %><i class="material-icons right">edit</i></a>
        
        
        <div id="change-name" class="modal">
            <form action="/schools/<%=user.school_id%>/classes/<%=user.class_id%>?_method=PUT" method="POST">
                <div class="modal-content no-p-bot">
                    <h4><%= texts.CHANGE_NAME %></h4>
                    <div class="row"></div>
                    <div class="input-field">
                        <input id="name" name="class[name]" type="text" class="validate" value="<%=clas.name%>" maxlength="10">
                        <label for="name"><%= texts.NAME %></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#!" class="modal-action modal-close waves-effect waves-green btn white black-text">Cancel</a>
                    <button class="blue waves-effect waves-light btn"><%= texts.SUBMIT %><i class="material-icons right">send</i></button>
                </div>
            </form>
        </div>
    </div>
</div>
    
<div class="container">
    <p class="divider"></p>
    <table class="bordered">
        <thead>
            <tr>
                <th><h6 class="bold no-m"><%= texts.MEMBERS %></h6></th>
            </tr>
        </thead>
        
        <tbody>
        <% users.forEach((u) => { %>
            <tr>

                <td>
                    <% if(u.username == user.username) {%>
                        <h6 class="blue-text"><%= texts.YOU %></divh6>
                    <% } else { %>
                        <h6><%= u.username %></h6>
                    <% } %>
                </td>
                <td class="center">
                    <% if(u.is_admin) { %>
                        <h6 class="green-text">Admin</h6>
                    <% } else { %>
                        <h6 class="yellow-text text-darken-3"><%= texts.CLASSMATE %></h6>
                    <% } %>
                </td>

                <td>
                    <% if(u.is_admin) { %>
                        <a href="/schools/<%=user.school_id%>/classes/<%=user.class_id%>/users/<%=u._id%>/deadmin" class="btn yellow black-text waves-light right"><%= texts.REMOVE_ADMIN %></a>
                    <% } else { %>
                        <a href="/schools/<%=user.school_id%>/classes/<%=user.class_id%>/users/<%=u._id%>/admin" class="btn green waves-light right"><%= texts.MAKE_ADMIN %></a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>

<% include ../partials/footer %>