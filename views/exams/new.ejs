<% include ../partials/header %>

<div class="container">
    <% include ../partials/flash %>
    <div class="card">
        <form method="POST" action="/classes/<%=e.class_id%>/exams" id="form">
            <div class="row"></div>
            <div class="container">
                <div class="row no-m">
                    <div class="input-field col s12 m6">
                        <input name="exam[title]" id="homeworkTitle" type="text" class="validate" maxlength="40">
                        <label class="active" for="homeworkTitle">Exam Title</label>
                    </div>
                    <div class="input-field col s12 m6">
                        <input name="exam[date]" id="homeworkDate" type="text" class="datepicker">
                        <label class="active" for="homeworkDate">Date</label>
                    </div>
                    <div class="input-field col s8">
                        <select name="exam[subject]" id="homeworkSubject">
                            <option value="" disabled selected>Choose a subject</option>
                            <option value="Maths">Maths</option>
                            <option value="Language Arts">Language Arts</option>
                            <option value="Foreign Language 1">Foreign Language 1</option>
                            <option value="Foreign Language 2">Foreign Language 2</option>
                            <option value="Foreign Language 3">Foreign Language 3</option>
                            <option value="Physics">Physics</option>
                            <option value="Politics">Politics</option>
                            <option value="Science">Science</option>
                            <option value="Art">Art</option>
                            <option value="Music">Music</option>
                            <option value="Geography">Geography</option>
                            <option value="History">History</option>
                            <option value="Biology">Biology</option>
                            <option value="Physical Education">Physical Education</option>
                            <option value="Philosophy">Philosophy</option>
                            <option value="Ethics">Ethics</option>
                            <option value="Chemistry">Chemistry</option>
                            <option value="Religion">Religion</option>
                            <option value="Other">Other</option>
                        </select>
                        <label>Subject</label>
                    </div>
                    <div class="input-field col s4">
                        <input disabled value=" " name="exam[subjectName]" id="subjectName" type="text" class="validate">
                        <label for="disabled">Subject Name</label>
                    </div>
                    <div class="row"></div>
                    <hr>
                    <div class="col s12 l8">
                        <h5 class="col s12 center">Topics</h5>
                        <hr class="col s4 push-s4">
                    </div>
                    
                    <div class="col s6 l2 row no-m">
                        <div class="container center-align col s12">
                            <a onclick="addTopic()" class="center-align btn-floating btn-large waves-effect waves-light"><i class="material-icons">add</i></a>
                        </div>
                        <p class="col s12 center-align center">Add Topic</p>
                    </div>
                    <div class="col s6 l2 row no-m">
                        <div class="container center-align col s12">
                            <a onclick="removeTopic()" class="red center-align btn-floating btn-large waves-effect waves-light"><i class="material-icons">close</i></a>
                        </div>
                        <p class="col s12 center-align center">Remove Topic</p>
                    </div>
                    <div class="row"></div>
                    
                    <div id="topicContainer">
                        <div class="input-field col s7">
                            <input name="topics[topic]" id="examTopic" type="text" class="validate" maxlength="30">
                            <label class="active" for="examTopic">Topic</label>
                        </div>
                        <div class="input-field col s5">
                            <input name="topics[learn]" id="examLearn" type="text" class="validate" maxlength="20">
                            <label class="active" for="examLearn">Where to learn</label>
                        </div>
                        <input name="topics[topic]" type="hidden">
                        <input name="topics[learn]" type="hidden">
                        <input name="topics[topic]" type="hidden">
                        <input name="topics[learn]" type="hidden">
                    </div>
                </div>
                
            </div>
        </form>
        <div class="row">
            <button class="btn waves-effect waves-light col s6 push-s3 m4 push-m4" name="action" id="btn-submit" onclick="formConfig()">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
        <div class="row"></div>
    </div>
</div>

<% include ../partials/footer %>