<% include ../partials/header %>

<div class="container margin-to-nav black-text">
    
    <% include ../partials/flash %>
    
    <div class="card <%= r.subject.color %> <%= r.subject.color == 'black' ? 'white-text' : '' %>">
        <div class="card-content">
            
            <div class="container">
                
                <div class="row">
                    <h4 class="no-m center-align"><%= r.title %></h4>
                </div>
                
                <% if(r.topics[0]) {%>
                <table>
                    <thead>
                        <tr>
                            <th><h6 class="bold"><%= texts.TOPICS %></h6></th>
                            <th><h6 class="right-align bold"><%= texts.LEARN %></h6></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% r.topics.forEach(t => {%>
                        <tr>
                            <td><h6><%= t.topic %></h6></td>
                            <td><h6 class="right-align"><%= t.learn %></h6></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                
                <% } %>
                
                <div class="row"></div>
                <p class="divider <%= r.subject.color == 'black' ? 'white' : 'black' %>"></p>
                <div class="row"></div>
                
                <% if(user.power > 0) { %>
                    <a href="/classes/<%=r.class_id%>/exams/<%=r._id%>/edit"><i class="left material-icons <%= r.subject.color == 'black' ? 'white-text' : 'black-text' %>">create</i></a>
                    <a class="modal-trigger" href="#warning"><i class="left material-icons black-text <%= r.subject.color == 'black' ? 'white-text' : 'black-text' %>">delete</i></a>
                    
                    <div id="warning" class="modal black-text">
                        <div class="modal-content">
                            <h5 class="s12 center"><%= texts.DELETE_WARNING_EXAM %></h5>
                            <h6 class="s12 center"><%= texts.DELETE_WARNING %></h6>
                        </div>
                        <form action="/classes/<%=r.class_id%>/exams/<%=r._id%>?_method=DELETE" method="POST">
                            <div class="modal-footer">
                                <a class="modal-action modal-close modal-button btn-flat"><%= texts.CANCEL %></a>
                                <button class="waves-effect waves-light btn red accent-4"><%= texts.DELETE %></button>
                            </div>
                        </form>
                    </div>
                <% } %>
                
                <p class="col right right-align bold"><%= texts[r.day] %> <%=r.d%></p>
                <div class="card-margin-bot"></div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
