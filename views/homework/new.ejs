<% include ../partials/header %>

<div class="container">
    <div class="card">
        <form method="POST" action="/homework" id="form">
            <div class="row"></div>
            <div class="container">
                <div class="row no-m">
                    <div class="input-field col s12 m6">
                        <input name="homework[title]" id="homeworkTitle" type="text" class="validate" placeholder="Exercises in the book" maxlength="40">
                        <label class="active" for="homeworkTitle">Homework Title</label>
                    </div>
                    <div class="input-field col s12 m6">
                        <input name="homework[date]" id="homeworkDate" type="text" class="datepicker" placeholder="10 May, 2018">
                        <label class="active" for="homeworkDate">Deadline</label>
                    </div>
                    <div class="input-field col s12 m6">
                        <select  name="homework[subject]" id="homeworkSubject" placeholder="Maths" maxlength="20">
                            <option value="" disabled selected>Choose a subject</option>
                            <option value="Maths">Maths</option>
                            <option value="Physics">Physics</option>
                            <option value="English">English</option>
                            <option value="Physical Education">Physical Education</option>
                            <option value="Science">Science</option>
                            <option value="Art">Art</option>
                            <option value="Music">Music</option>
                            <option value="Geography">Geography</option>
                            <option value="History">History</option>
                            <option value="Other">Other</option>
                        </select>
                        <label>Subject</label>
                    </div>
                    <div class="input-field col s12 m6">
                        <input name="homework[author]" id="homeworkAuthor" type="text" class="validate" placeholder="Marco" maxlength="20">
                        <label class="active" for="homeworAuthor">Author</label>
                    </div>
                    <div class="input-field col s12">
                        <input name="homework[description]" id="homeworkDescription" type="text" class="validate" placeholder="Do exercise 1 and 2 on p23 in the exercise-book" maxlength="300">
                        <label class="active" for="homeworkDescription">Description</label>
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <button class="btn waves-effect waves-light col s6 push-s3 m4 push-m4" name="action" id="btn-submit" onclick="formConfig()">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
        <div class="row"></div>
    </div>
</div>

<% include ../partials/footer %>